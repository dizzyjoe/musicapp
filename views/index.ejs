    </div>
  </div>
</div>


<script>
    // Function to handle the click event on the "New Comment" button
    function handleNewCommentButtonClick(event) {
      const songId = event.target.getAttribute("data-song");
      // Redirect to the add-comment.html page with the selected song ID as a query parameter
      window.location.href = `comments.ejs?songId=${songId}`;
    }
  
    // Add event listeners to all "New Comment" buttons
    const newCommentButtons = document.querySelectorAll('#edit-button');
    newCommentButtons.forEach(button => {
      button.addEventListener('click', handleNewCommentButtonClick);
    });
  </script>


<!-- Music Trivia Generator -->
<div id="trivia">
    <h2>Music Trivia Generator</h2>
    <p id="trivia-fact">Trivia fact will appear here</p>
    <button id="generate-trivia">Generate Trivia Fact</button>
  </div>
</div>

<script>
  // Array of random music trivia facts
  const triviaFacts = [
    "The first music video ever played on MTV was 'Video Killed the Radio Star' by The Buggles.",
    "The longest officially released song is 'The Rise and Fall of Bossanova' by PC III.",
    "Mozart was known to be a pet lover, and he had a pet starling bird that could sing part of his Piano Concerto in G Major.",
    "The Beatles used the word 'love' 613 times in their songs.",
    "The first compact disc was created in 1965, but it wasn't widely adopted until the early 1980s.",
    "Michael Jackson's 'Thriller' album is the best-selling album of all time.",
    "Beethoven composed many of his greatest works while he was completely deaf.",
    "Elvis Presley made 31 movies during his career as a musician and actor.",
    "Bob Marley's last words to his son Ziggy were 'Money can't buy life.'",
    "The world's largest music festival is the Donauinselfest in Vienna, with over three million attendees."
  ];

  // Function to generate a random trivia fact
  function generateTriviaFact() {
    const randomIndex = Math.floor(Math.random() * triviaFacts.length);
    const triviaFact = triviaFacts[randomIndex];
    document.getElementById("trivia-fact").textContent = triviaFact;
  }

  // Event listener for the "Generate Trivia Fact" button
  document.getElementById("generate-trivia").addEventListener("click", generateTriviaFact);


</script>
</body>
